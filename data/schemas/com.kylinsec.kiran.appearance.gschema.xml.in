<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="@PROJECT_NAME@">
    <schema id="com.kylinsec.kiran.appearance" path="/com/kylinsec/kiran/appearance/">
        <key name="desktop-background" type="s">
            <default>'/usr/share/backgrounds/kiran/default.jpg'</default>
            <description>File to use for the desktop background image.</description>
        </key>
        <key name="lock-screen-background" type="s">
            <default>'/usr/share/backgrounds/kiran/default.jpg'</default>
            <description>File to use for the lock screen background image.</description>
        </key>
        <key name="auto-switch-window-theme" type="b">
            <default>false</default>
            <description>Whether turn on automatic window theme switching according to time.</description>
        </key>
    </schema>

</schemalist>
