<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
    <interface name="com.kylinsec.Kiran.SessionDaemon.Appearance">

        <method name="GetThemes">
            <arg type="i" name="type" direction="in">
                <doc:doc>
                    <doc:summary>The theme type that contains gtk, icon and cursor, etc.</doc:summary>
                </doc:doc>
            </arg>
            <arg type="s" name="theme_json" direction="out">
                <doc:doc>
                    <doc:summary>The theme info that contain name and path.</doc:summary>
                </doc:doc>
            </arg>
            <doc:doc>
                <doc:description>
                    <doc:para>Get the theme info.</doc:para>
                </doc:description>
            </doc:doc>
        </method>

        <method name="SetTheme">
            <arg type="i" name="type" direction="in">
                <doc:doc>
                    <doc:summary>The theme type that contains gtk, icon and cursor, etc.</doc:summary>
                </doc:doc>
            </arg>
            <arg type="s" name="theme_name" direction="in">
                <doc:doc>
                    <doc:summary>The theme name.</doc:summary>
                </doc:doc>
            </arg>
            <doc:doc>
                <doc:description>
                    <doc:para>Set the theme name for the type.</doc:para>
                </doc:description>
            </doc:doc>
        </method>

        <method name="GetFont">
            <arg type="i" name="type" direction="in">
                <doc:doc>
                    <doc:summary>The font type that contains application font, document font, desktop font and monospace font, etc.</doc:summary>
                </doc:doc>
            </arg>
            <arg type="s" name="font" direction="out">
                <doc:doc>
                    <doc:summary>The font that contain name and size, for example 'San 10'.</doc:summary>
                </doc:doc>
            </arg>
            <doc:doc>
                <doc:description>
                    <doc:para>Get the font for the type.</doc:para>
                </doc:description>
            </doc:doc>
        </method>

        <method name="SetFont">
            <arg type="i" name="type" direction="in">
                <doc:doc>
                    <doc:summary>The font type that contains application font, document font, desktop font and monospace font, etc.</doc:summary>
                </doc:doc>
            </arg>
            <arg type="s" name="font" direction="in">
                <doc:doc>
                    <doc:summary>The font, for example 'San 10'.</doc:summary>
                </doc:doc>
            </arg>
            <doc:doc>
                <doc:description>
                    <doc:para>Set the font for the type.</doc:para>
                </doc:description>
            </doc:doc>
        </method>

        <method name="SetDesktopBackground">
            <arg type="s" name="desktop_background" direction="in">
                <doc:doc>
                    <doc:summary>File path of desktop background.</doc:summary>
                </doc:doc>
            </arg>
            <doc:doc>
                <doc:description>
                    <doc:para>Set the desktop background.</doc:para>
                </doc:description>
            </doc:doc>
        </method>

        <property name="gtk_theme" type="s" access="read">
            <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
            <doc:doc>
                <doc:description>
                    <doc:para>The gtk theme name.</doc:para>
                </doc:description>
            </doc:doc>
        </property>

        <property name="metacity_theme" type="s" access="read">
            <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
            <doc:doc>
                <doc:description>
                    <doc:para>The metacity(marco window manage) theme name.</doc:para>
                </doc:description>
            </doc:doc>
        </property>

        <property name="icon_theme" type="s" access="read">
            <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
            <doc:doc>
                <doc:description>
                    <doc:para>The icon theme name.</doc:para>
                </doc:description>
            </doc:doc>
        </property>

        <property name="cursor_theme" type="s" access="read">
            <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
            <doc:doc>
                <doc:description>
                    <doc:para>The cursor theme name.</doc:para>
                </doc:description>
            </doc:doc>
        </property>

        <property name="desktop_background" type="s" access="read">
            <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
            <doc:doc>
                <doc:description>
                    <doc:para>The file path of desktop background.</doc:para>
                </doc:description>
            </doc:doc>
        </property>

        <signal name="ThemeChanged">
            <arg name="type" type="i">
                <doc:doc>
                    <doc:summary>The theme type.</doc:summary>
                </doc:doc>
            </arg>
        </signal>

    </interface>
</node>
