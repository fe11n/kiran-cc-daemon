<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
    <interface name="com.kylinsec.Kiran.SessionDaemon.Appearance">

        <method name="GetFont">
            <arg type="i" name="type" direction="in">
                <doc:doc>
                    <doc:summary>The font type that contains application font, document font, desktop font and monospace font, etc.</doc:summary>
                </doc:doc>
            </arg>
            <arg type="s" name="font_name" direction="out">
                <doc:doc>
                    <doc:summary>The font name, for example 'San 10' which '10' is the font size.</doc:summary>
                </doc:doc>
            </arg>
            <doc:doc>
                <doc:description>
                    <doc:para>Get the font name for the type.</doc:para>
                </doc:description>
            </doc:doc>
        </method>

        <method name="SetFont">
            <arg type="i" name="type" direction="in">
                <doc:doc>
                    <doc:summary>The font type that contains application font, document font, desktop font and monospace font, etc.</doc:summary>
                </doc:doc>
            </arg>
            <arg type="s" name="font_name" direction="in">
                <doc:doc>
                    <doc:summary>The font name, for example 'San 10' which '10' is the font size.</doc:summary>
                </doc:doc>
            </arg>
            <doc:doc>
                <doc:description>
                    <doc:para>Set the font name for the type.</doc:para>
                </doc:description>
            </doc:doc>
        </method>

    </interface>
</node>
