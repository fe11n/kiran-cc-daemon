<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
    <interface name="com.unikylin.Kiran.SessionDaemon.Keybinding">
        <method name="AddCustomShortcut">
            <arg type="s" name="name" direction="in">
                <doc:doc>
                    <doc:summary>The shortcut name.</doc:summary>
                </doc:doc>
            </arg>
            <arg type="s" name="action" direction="in">
                <doc:doc>
                    <doc:summary>Execute command.</doc:summary>
                </doc:doc>
            </arg>
            <arg type="s" name="key_combination" direction="in">
                <doc:doc>
                    <doc:summary>The keystroke combination.</doc:summary>
                </doc:doc>
            </arg>
            <arg type="s" name="id" direction="out">
                <doc:doc>
                    <doc:summary>The unique ID to identify the shortcut.</doc:summary>
                </doc:doc>
            </arg>
            <doc:doc>
                <doc:description>
                    <doc:para>Add a custom shortcut. Execute the action when press the keystroke combination.</doc:para>
                </doc:description>
            </doc:doc>
        </method>

        <method name="DeleteCustomShortcut">
            <arg type="s" name="name" direction="in">
                <doc:doc>
                    <doc:summary>The shortcut name.</doc:summary>
                </doc:doc>
            </arg>
            <doc:doc>
                <doc:description>
                    <doc:para>Delete a custom shortcut.</doc:para>
                </doc:description>
            </doc:doc>
        </method>

        <method name="ListCustomShortcuts">
            <arg type="a{sv}" name="shortcuts" direction="out">
                <doc:doc>
                    <doc:summary>The custom shortcuts.</doc:summary>
                </doc:doc>
            </arg>
            <doc:doc>
                <doc:description>
                    <doc:para>list custom shortcuts.</doc:para>
                </doc:description>
            </doc:doc>
        </method>



    </interface>
</node>
